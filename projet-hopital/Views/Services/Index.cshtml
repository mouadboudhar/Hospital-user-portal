@model projet_hopital.ViewModels.ServiceListViewModel
@{
    ViewData["Title"] = "Nos Services";
    var defaultServiceImage = "https://images.unsplash.com/photo-1559757148-5c350d0d3c56?w=400";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold"><i class="bi bi-clipboard2-pulse me-2 text-primary"></i>Nos Services Médicaux</h1>
        <p class="text-muted mb-0">Découvrez notre gamme complète de services de santé</p>
    </div>
</div>
<!-- Recherche et Filtres -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher un service..." value="@Model.SearchQuery" />
                    </div>
                </div>
                <div class="col-md-5">
                    <select name="departmentId" class="form-select">
                        <option value="">Tous les Départements</option>
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.Id" selected="@(Model.SelectedDepartmentId == dept.Id)">@dept.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter me-1"></i>Filtrer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (Model.Services.Any())
{
    <div class="row g-4">
        @foreach (var service in Model.Services)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="@(service.ImageUrl ?? defaultServiceImage)" class="card-img-top" alt="@service.Name" style="height: 180px; object-fit: cover;">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@service.Department?.Name</span>
                        <h5 class="card-title fw-bold">@service.Name</h5>
                        <p class="text-muted small mb-3">@service.Description</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fs-4 fw-bold text-success">@service.Price.ToString("N0") MAD</span>
                            <span class="badge bg-light text-dark"><i class="bi bi-clock me-1"></i>@service.DurationMinutes min</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-primary w-100">
                            <i class="bi bi-info-circle me-2"></i>En Savoir Plus
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=300" alt="Aucun résultat" class="mb-4 rounded" style="width: 200px; opacity: 0.6;">
        <h4>Aucun service trouvé</h4>
        <p class="text-muted">Essayez de modifier vos critères de recherche</p>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Voir tous les services
        </a>
    </div>
}
