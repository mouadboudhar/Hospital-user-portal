@model projet_hopital.ViewModels.BasketViewModel
@{
    ViewData["Title"] = "Mon Panier";
}
<h1 class="fw-bold mb-4"><i class="bi bi-cart3 me-2 text-primary"></i>Mon Panier</h1>
@if (Model.Basket?.Items.Any() == true)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0"><i class="bi bi-bag me-2"></i>Articles (@Model.TotalItems)</h5>
                    <form asp-action="Clear" method="post">
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir vider le panier ?')">
                            <i class="bi bi-trash me-1"></i>Vider le Panier
                        </button>
                    </form>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model.Basket.Items)
                    {
                        <div class="d-flex justify-content-between align-items-center p-4 border-bottom">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-@(item.ItemType.ToString() == "Appointment" ? "calendar-check" : "clipboard2-check") text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">@item.ItemDescription</h6>
                                    @if (item.PreferredDate.HasValue)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>@item.PreferredDate.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))
                                            @if (item.PreferredTime.HasValue)
                                            {
                                                <span class="ms-2"><i class="bi bi-clock me-1"></i>@item.PreferredTime.Value.ToString(@"hh\:mm")</span>
                                            }
                                        </small>
                                    }
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <span class="fs-5 fw-bold text-success">@item.SubTotal.ToString("N0") MAD</span>
                                <form asp-action="RemoveItem" method="post">
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Récapitulatif</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <span>@Model.TotalPrice.ToString("N0") MAD</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Frais de service</span>
                        <span class="text-success">Gratuit</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-4 text-success">@Model.TotalPrice.ToString("N0") MAD</span>
                    </div>
                    <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-credit-card me-2"></i>Passer au Paiement
                    </a>
                    <a asp-controller="Services" asp-action="Index" class="btn btn-outline-primary w-100 mt-2">
                        <i class="bi bi-plus-lg me-2"></i>Continuer les Achats
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=200" alt="Panier vide" class="rounded-circle mb-4" style="width: 150px; height: 150px; object-fit: cover; opacity: 0.6;">
        <h4>Votre panier est vide</h4>
        <p class="text-muted mb-4">Parcourez nos services et médecins pour ajouter des articles.</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Services" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-clipboard2-pulse me-2"></i>Nos Services
            </a>
            <a asp-controller="Doctors" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-person-badge me-2"></i>Nos Médecins
            </a>
        </div>
    </div>
}
