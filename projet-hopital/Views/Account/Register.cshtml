@model projet_hopital.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Inscription";
}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="https://images.unsplash.com/photo-1579684385127-1ef15d508118?w=100" alt="Inscription" class="rounded-circle mb-3" style="width: 80px; height: 80px; object-fit: cover;">
                    <h2 class="fw-bold">Créer un Compte</h2>
                    <p class="text-muted">Rejoignez notre communauté de patients</p>
                </div>
                <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Prénom</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Votre prénom" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Nom</label>
                            <input asp-for="LastName" class="form-control" placeholder="Votre nom" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Adresse Email</label>
                        <input asp-for="Email" class="form-control" placeholder="votre@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Téléphone</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="+212 6XX XXX XXX" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Adresse</label>
                        <input asp-for="Address" class="form-control" placeholder="Votre adresse complète" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Date de Naissance</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Mot de Passe</label>
                            <input asp-for="Password" class="form-control" placeholder="Min. 6 caractères" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmer</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Répétez le mot de passe" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-person-plus me-2"></i>Créer mon Compte
                    </button>
                </form>
                <div class="text-center">
                    <p class="mb-0">Déjà inscrit ? <a asp-action="Login" class="fw-bold">Connectez-vous</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
