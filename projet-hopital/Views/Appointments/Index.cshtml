@model List<projet_hopital.Models.Appointment>
@{
    ViewData["Title"] = "Mes Rendez-vous";
}
<h1 class="fw-bold mb-4"><i class="bi bi-calendar-check me-2 text-primary"></i>Mes Rendez-vous</h1>
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link active" asp-action="Index"><i class="bi bi-list me-1"></i>Tous</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Upcoming"><i class="bi bi-calendar-event me-1"></i>À Venir</a>
    </li>
</ul>
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var appointment in Model)
        {
            var statusClass = appointment.Status.ToString() == "Confirmed" ? "success" : appointment.Status.ToString() == "Cancelled" ? "danger" : "warning";
            var statusText = appointment.Status.ToString() == "Confirmed" ? "Confirmé" : appointment.Status.ToString() == "Cancelled" ? "Annulé" : "En attente";
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="badge bg-@statusClass">@statusText</span>
                            <span class="text-muted small">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <h5 class="card-title">Dr. @appointment.Doctor?.FullName</h5>
                        <p class="text-primary mb-2">@appointment.Doctor?.Specialization</p>
                        <p class="text-muted mb-3">
                            <i class="bi bi-clock me-1"></i>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-success">@appointment.TotalCost.ToString("N0") MAD</span>
                            <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye me-1"></i>Détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=200" alt="Aucun rendez-vous" class="rounded-circle mb-4" style="width: 150px; height: 150px; object-fit: cover; opacity: 0.6;">
        <h4>Aucun rendez-vous</h4>
        <p class="text-muted mb-4">Vous n'avez pas encore de rendez-vous programmé.</p>
        <a asp-controller="Doctors" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-calendar-plus me-2"></i>Prendre un Rendez-vous
        </a>
    </div>
}
