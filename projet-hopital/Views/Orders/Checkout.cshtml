@model projet_hopital.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Paiement";
}
<h1 class="fw-bold mb-4"><i class="bi bi-credit-card me-2 text-primary"></i>Finaliser la Commande</h1>
<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-bag-check me-2"></i>Articles de la Commande</h5>
            </div>
            <div class="card-body p-0">
                @foreach (var item in Model.Basket!.Items)
                {
                    <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                <i class="bi bi-check-circle text-primary"></i>
                            </div>
                            <span>@item.ItemDescription</span>
                        </div>
                        <span class="fw-bold">@item.SubTotal.ToString("N0") MAD</span>
                    </div>
                }
            </div>
        </div>
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Mode de Paiement</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Orders" asp-action="ProcessCheckout" method="post">
                    <div class="mb-4">
                        <div class="form-check mb-3 p-3 border rounded">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="Card" id="payCard" checked />
                            <label class="form-check-label w-100" for="payCard">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-credit-card me-2"></i>Carte Bancaire</span>
                                    <span class="text-muted small">Visa, Mastercard</span>
                                </div>
                            </label>
                        </div>
                        <div class="form-check p-3 border rounded">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="Cash" id="payCash" />
                            <label class="form-check-label w-100" for="payCash">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-cash me-2"></i>Paiement sur Place</span>
                                    <span class="text-muted small">À l'hôpital</span>
                                </div>
                            </label>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label"><i class="bi bi-chat-text me-1"></i>Notes (Optionnel)</label>
                        <textarea name="Notes" class="form-control" rows="2" placeholder="Instructions spéciales..."></textarea>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i><strong>Démo:</strong> Aucun paiement réel ne sera effectué.
                    </div>
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-check-circle me-2"></i>Confirmer - @Model.Basket.TotalPrice.ToString("N0") MAD
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Récapitulatif</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Sous-total</span>
                    <span>@Model.Basket.TotalPrice.ToString("N0") MAD</span>
                </div>
                <div class="d-flex justify-content-between mb-2 text-muted">
                    <span>Frais de service</span>
                    <span class="text-success">Gratuit</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <span class="fw-bold fs-5">Total</span>
                    <span class="fw-bold fs-4 text-success">@Model.Basket.TotalPrice.ToString("N0") MAD</span>
                </div>
            </div>
        </div>
    </div>
</div>
