@model projet_hopital.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Order Details";
}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Orders</a></li>
        <li class="breadcrumb-item active">@Model.Order.OrderNumber</li>
    </ol>
</nav>
<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">Order Items</h5>
            </div>
            <div class="card-body">
                @foreach (var item in Model.Order.Items)
                {
                    <div class="d-flex justify-content-between py-3 border-bottom">
                        <div>
                            <h6>@item.ItemName</h6>
                            @if (item.AppointmentDate.HasValue)
                            {
                                <small class="text-muted">@item.AppointmentDate.Value.ToString("MMM d, yyyy")</small>
                            }
                        </div>
                        <span class="fw-bold">@item.SubTotal.ToString("C")</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">Order Summary</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Order Number</small>
                    <div class="fw-bold">@Model.Order.OrderNumber</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Date</small>
                    <div>@Model.Order.CreatedAt.ToString("MMMM d, yyyy")</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Status</small>
                    <div><span class="badge bg-success">@Model.Order.Status</span></div>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <span class="fw-bold fs-5">Total</span>
                    <span class="fw-bold fs-5 text-primary">@Model.Order.TotalAmount.ToString("C")</span>
                </div>
            </div>
        </div>
    </div>
</div>
