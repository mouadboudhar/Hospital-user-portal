@model projet_hopital.ViewModels.DoctorListViewModel
@{
    ViewData["Title"] = "Nos Médecins";
    var defaultDoctorImage = "https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?w=300";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold"><i class="bi bi-person-badge me-2 text-primary"></i>Nos Médecins</h1>
        <p class="text-muted mb-0">Découvrez notre équipe de médecins qualifiés</p>
    </div>
</div>
<!-- Recherche et Filtres -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher un médecin..." value="@Model.SearchQuery" />
                    </div>
                </div>
                <div class="col-md-5">
                    <select name="departmentId" class="form-select">
                        <option value="">Tous les Départements</option>
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept.Id" selected="@(Model.SelectedDepartmentId == dept.Id)">@dept.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter me-1"></i>Filtrer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (Model.Doctors.Any())
{
    <div class="row g-4">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <img src="@(doctor.ImageUrl ?? defaultDoctorImage)" class="card-img-top" alt="@doctor.FullName" style="height: 200px; object-fit: cover;">
                        @if (doctor.IsAvailable)
                        {
                            <span class="position-absolute top-0 end-0 m-2 badge bg-success">Disponible</span>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@doctor.FullName</h5>
                        <p class="text-primary mb-2"><i class="bi bi-award me-1"></i>@doctor.Specialization</p>
                        <p class="text-muted small mb-2"><i class="bi bi-building me-1"></i>@doctor.Department?.Name</p>
                        <p class="text-muted small mb-3"><i class="bi bi-briefcase me-1"></i>@doctor.YearsOfExperience ans d'expérience</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-5 fw-bold text-success">@doctor.ConsultationFee.ToString("N0") MAD</span>
                            <span class="text-muted small">Consultation</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-primary w-100">
                            <i class="bi bi-calendar-plus me-2"></i>Prendre Rendez-vous
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=300" alt="Aucun résultat" class="mb-4 rounded" style="width: 200px; opacity: 0.6;">
        <h4>Aucun médecin trouvé</h4>
        <p class="text-muted">Essayez de modifier vos critères de recherche</p>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Voir tous les médecins
        </a>
    </div>
}
